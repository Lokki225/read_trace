{
  "manifest_version": 3,
  "name": "ReadTrace",
  "version": "1.0.0",
  "description": "Automatically track your manga reading progress across supported scanlation sites.",
  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://mangadex.org/*",
    "https://*.mangadex.org/*",
    "https://www.webtoons.com/*",
    "https://m.webtoons.com/*",
    "https://webtoons.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://mangadex.org/chapter/*",
        "https://mangadex.org/title/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.webtoons.com/*/*/*/*/viewer*",
        "https://m.webtoons.com/*/*/*/*/viewer*",
        "https://webtoons.com/*/*/*/*/viewer*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "http://localhost:3000/dashboard*"
      ],
      "js": ["dashboard-content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}
